{
    "app-id": "ar.xjuan.Cambalache",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47beta",
    "sdk": "org.gnome.Sdk",
    "separate-locales": false,
    "command": "cambalache",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "python3-lxml",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --exists-action=i --ignore-installed --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"lxml\" --no-build-isolation"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/63/f7/ffbb6d2eb67b80a45b8a0834baa5557a14a5ffce0979439e7cd7f0c4055b/lxml-5.2.2.tar.gz",
                    "sha256": "bb2dc4898180bea79863d5487e5f9c7c34297414bad54bcd0f0852aee9cfdb87"
                }
            ]
        },
        {
            "name": "libseat",
            "buildsystem": "meson",
            "config-opts": [
                "-Dserver=disabled",
                "-Dman-pages=disabled"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.sr.ht/~kennylevinsen/seatd/archive/0.9.1.tar.gz",
                    "sha256": "819979c922a0be258aed133d93920bce6a3d3565a60588d6d372ce9db2712cd3",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 234932,
                        "stable-only": true,
                        "url-template": "https://git.sr.ht/~kennylevinsen/seatd/archive/$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "wlroots",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.freedesktop.org/wlroots/wlroots.git",
                    "tag": "0.18",
                    "commit": "4666996b2a34b53899aedafcd3586fb1c7a16af6"
                }
            ]
        },
        {
            "name": "casilda",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jpu/casilda.git",
                    "tag": "0.1.1",
                    "commit": "1cd675f1d2445cd5aa31cc0b2b0da6b505c53025"
                }
            ]
        },
        {
            "name": "cambalache",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jpu/cambalache.git",
                    "tag": "0.96.1",
                    "commit": "ae11d6485a851b786abc7d8b3c6b87415eef8d2c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 234786,
                        "stable-only": true,
                        "tag-template": "$version"
                    }
                }
            ]
        }
    ]
}
