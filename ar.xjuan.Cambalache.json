        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "cambalache",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url": "https://gitlab.gnome.org/jpu/cambalache.git",
                    "tag": "0.8.2",
                    "commit": "e3b7e952bde91bf2c14ea8681252a7494d2ee2b9",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 234786,
                        "stable-only": true,
                        "tag-template": "$version"
                    }
                }
            ]
        }
    ]
